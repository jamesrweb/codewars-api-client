{
  "name": "jamesrweb/codewars-kata-exporter",
  "description": "A wrapper for the Codewars API to export a given users completed Katas into a sensible folder structure",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "James Robb",
      "email": "james@jamesrobb.co.uk"
    }
  ],
  "scripts": {
    "generate:autoload": "composer dump-autoload -o",
    "start": "php index.php",
    "test": "phpunit tests --testdox --configuration phpunit.xml",
    "test:watch": "phpunit-watcher watch tests --testdox --configuration phpunit.xml"
  },
  "minimum-stability": "stable",
  "require": {
    "symfony/http-client": "^5.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "spatie/phpunit-watcher": "^1.23",
    "symfony/dotenv": "^5.2",
    "vanilla/garden-schema": "^2.2"
  },
  "autoload": {
    "psr-4": {
      "CodewarsKataExporter\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CodewarsKataExporter\\Schemas\\": "schemas/",
      "CodewarsKataExporter\\Tests\\": "tests/"
    }
  }
}
